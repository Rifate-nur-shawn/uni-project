                        <VBox fx:id="cartItemsContainer" alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                        </VBox>
