                        <VBox fx:id="emptyCartMessage" alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-padding: 50; -fx-background-radius: 10;" visible="true">
                            <children>
                                <Label text="Your cart is empty" textFill="#95a5a6">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="Add some products to get started!" textFill="#bdc3c7">
