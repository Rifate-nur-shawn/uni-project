                                <HBox alignment="CENTER" spacing="50.0">
                                    <children>
                                        <VBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Subtotal:" textFill="#2c3e50">
                                                    <font>
                                                        <Font name="System" size="18.0" />
                                                    </font>
                                                </Label>
                                                <Label text="Tax (10%):" textFill="#2c3e50">
                                                    <font>
                                                        <Font name="System" size="18.0" />
                                                    </font>
                                                </Label>
                                                <Separator prefWidth="200.0" />
                                                <Label text="Total:" textFill="#2c3e50">
                                                    <font>
                                                        <Font name="System Bold" size="20.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <VBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Label fx:id="subtotalLabel" text="$0.00" textFill="#449b6d">
                                                    <font>
                                                        <Font name="System Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="taxLabel" text="$0.00" textFill="#449b6d">
                                                    <font>
                                                        <Font name="System Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                                <Separator prefWidth="200.0" />
                                                <Label fx:id="totalLabel" text="$0.00" textFill="#633364">
                                                    <font>
                                                        <Font name="System Bold" size="20.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" spacing="20.0">
                                    <children>
                                        <Button onAction="#clearCart" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 16px; -fx-font-weight: bold;" text="Clear Cart">
                                            <HBox.margin>
                                                <Insets top="20.0" />
                                            </HBox.margin>
                                        </Button>
                                        <Button onAction="#checkout" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #449b6d; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 16px; -fx-font-weight: bold;" text="Checkout">
                                            <HBox.margin>
                                                <Insets top="20.0" />
                                            </HBox.margin>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="10.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
