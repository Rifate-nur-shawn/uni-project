<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="mainBorderPane" prefHeight="700.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iamshawn.uniproject.ProductDetailsController">

    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;">
            <Label fx:id="breadcrumbProductName" text="Product Name"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <ImageView fx:id="productImage" fitHeight="250.0" fitWidth="250.0"
                       preserveRatio="true" />

            <Label fx:id="productNameLabel" text="Product Name"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label fx:id="brandLabel" text="Brand" />
            <Label fx:id="categoryLabel" text="Category" />
            <Label fx:id="priceLabel" text="$0.00"
                   style="-fx-text-fill: #449b6d; -fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label fx:id="statusLabel" text="Status" />

            <Spinner fx:id="quantitySpinner" prefWidth="120.0" />
            <Button fx:id="addToCartButton" text="Add to Cart"
                    onAction="#addToCart"
                    style="-fx-background-color: #449b6d; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Label fx:id="addToCartMessage" text="Added!" visible="false"
                   style="-fx-text-fill: #449b6d; -fx-font-style: italic;" />

            <Text fx:id="descriptionText" wrappingWidth="900.0" text="Product description goes here." />
            <Text fx:id="usageText" wrappingWidth="900.0" text="Usage instructions go here." />

            <HBox alignment="CENTER" spacing="20.0">
                <Button text="Home" onAction="#navigateToHome"/>
                <Button text="Products" onAction="#navigateToProducts"/>
                <Button text="About" onAction="#navigateToAbout"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
