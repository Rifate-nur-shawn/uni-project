<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iamshawn.uniproject.AdminChatController"
            prefWidth="1000.0" prefHeight="700.0">

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Label text="Customer Support Chat" textFill="#633364">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" prefWidth="800.0" prefHeight="500.0" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10;">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" style="-fx-background-color: #e9ecef;">
                            <children>
                                <Label text="User: " textFill="#636e72">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <Label fx:id="userLabel" text="No active user" textFill="#636e72">
                                    <font><Font size="14.0" /></font>
                                </Label>
                            </children>
                            <padding><Insets left="10.0" /></padding>
                        </HBox>

                        <ScrollPane fitToWidth="true" prefHeight="400.0">
                            <content>
                                <VBox fx:id="chatBox" prefWidth="780.0" spacing="10.0">
                                    <padding><Insets all="10.0" /></padding>
                                </VBox>
                            </content>
                        </ScrollPane>

                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <TextField fx:id="messageField" onAction="#sendMessage"
                                           prefWidth="700.0" promptText="Type your response..."
                                           style="-fx-background-radius: 20;">
                                    <font><Font size="14.0" /></font>
                                </TextField>
                                <Button fx:id="sendButton" text="Send" onAction="#sendMessage"
                                        style="-fx-background-color: linear-gradient(to right, #633364, #449b6d); -fx-text-fill: white; -fx-background-radius: 20;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Button>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Status: " textFill="#636e72" />
                                <Label fx:id="statusLabel" text="Server not running" textFill="#e74c3c" />
                            </children>
                            <padding><Insets left="15.0" /></padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
