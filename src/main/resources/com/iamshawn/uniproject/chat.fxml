<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iamshawn.uniproject.ChatController"
            prefHeight="700.0" prefWidth="1000.0">

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Label text="Chat with Support" textFill="#449b6d">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0"
                      style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);">

                    <children>
                        <ScrollPane fitToWidth="true" prefHeight="400.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="chatBox" spacing="10.0" prefWidth="780.0">
                                    <padding>
                                        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>

                        <HBox alignment="CENTER" spacing="10.0" prefHeight="50.0">
                            <children>
                                <TextField fx:id="messageField" onAction="#sendMessage"
                                           prefHeight="40.0" prefWidth="700.0"
                                           promptText="Type your message here..."
                                           style="-fx-background-radius: 20; -fx-padding: 0 15;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                                <Button fx:id="sendButton" onAction="#sendMessage"
                                        prefHeight="40.0" prefWidth="80.0"
                                        text="Send"
                                        style="-fx-background-color: linear-gradient(to right, #449b6d, #633364); -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 5);">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" prefHeight="30.0">
                            <children>
                                <Label text="Status: " textFill="#636e72">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="statusLabel" text="Disconnected" textFill="#e74c3c">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets left="15.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
